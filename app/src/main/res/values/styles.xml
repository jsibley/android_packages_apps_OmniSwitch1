<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="PopupMenuLight" parent="@android:style/Theme.Material.Light">
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearancePopupMenuCondensed</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearancePopupMenuCondensed</item>
    </style>
    <style name="PopupMenuDark" parent="@android:style/Theme.Material">
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearancePopupMenuCondensed</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearancePopupMenuCondensed</item>
    </style>
    <style name="PopupMenuSystem" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearancePopupMenuCondensed</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearancePopupMenuCondensed</item>
    </style>
    <style name="SettingsTheme" parent="@android:style/Theme.DeviceDefault.Settings"></style>
    <style name="AppTheme" parent="@android:style/Theme.Material" />
    <style name="AppThemeSystem" parent="@android:style/Theme.DeviceDefault.Light.Dialog" />
    <style name="PlaceholderTheme" parent="@android:style/Theme.Translucent.NoTitleBar"></style>
    <style name="TextAppearancePopupMenuCondensed" parent="@android:style/TextAppearance.Material.Menu" >
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>
    <style name="LauncherTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <!-- NoTitle -->
        <item name="android:windowNoTitle">true</item>
        <!-- wallpaper -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <!-- misc -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="workspaceTextColor">@android:color/white</item>
        <item name="workspaceShadowColor">#B0000000</item>
        <item name="isWorkspaceDarkText">false</item>
    </style>

    <style name="LauncherTheme.DarkText" parent="@style/LauncherTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="workspaceTextColor">#99000000</item>
        <item name="workspaceShadowColor">@android:color/transparent</item>
        <item name="isWorkspaceDarkText">true</item>
    </style>

    <style name="Calendar" parent="@android:style/TextAppearance.DeviceDefault" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/workspaceTextColor</item>
        <item name="android:shadowColor">?attr/workspaceShadowColor</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="CalendarSmall" parent="@style/Calendar" >
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalendarBig" parent="@style/Calendar" >
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CalendarBigger" parent="@style/Calendar" >
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WeatherDetailed" parent="@android:style/TextAppearance.DeviceDefault" >
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/workspaceTextColor</item>
        <item name="android:shadowColor">?attr/workspaceShadowColor</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>
</resources>
